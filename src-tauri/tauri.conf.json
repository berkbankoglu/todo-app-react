{
  "productName": "BankoSpace",
  "version": "1.0.4",
  "identifier": "com.berkbankoglu.bankospace",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Berk Bankoglu",
    "icon": [
      "icons/icon.png"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perUser",
        "languages": ["en-US"],
        "displayLanguageSelector": false
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "BankoSpace",
        "width": 1400,
        "height": 800,
        "minWidth": 1200,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "url": "index.html"
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://accounts.google.com https://*.googleapis.com https://*.firebaseapp.com https://*.firebaseio.com https://*.cloudfunctions.net; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; frame-src https://accounts.google.com https://*.firebaseapp.com",
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main app capabilities",
          "windows": ["main"],
          "permissions": [
            "dialog:allow-save",
            "dialog:allow-open",
            "fs:allow-read-text-file",
            "fs:allow-write-text-file",
            "fs:default",
            "notification:default"
          ]
        }
      ]
    }
  }
}
